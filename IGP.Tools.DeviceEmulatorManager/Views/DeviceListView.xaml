<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:IGP.Tools.DeviceEmulatorManager.Views"
                    xmlns:models="clr-namespace:IGP.Tools.DeviceEmulatorManager.Models">

    <DataTemplate DataType="{x:Type models:DeviceEmulatorInfo}" x:Key="DeviceEmulatorInfoTemplate">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Device.Name}" />
            <TextBlock Text="{Binding Emulator.IsStarted}" />
            <TextBlock Text="{Binding OutputPort.Name}" />
        </StackPanel>
    </DataTemplate>

    <Style TargetType="{x:Type views:DeviceListView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ListView ItemsSource="{Binding Devices}" ItemTemplate="{StaticResource DeviceEmulatorInfoTemplate}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
