<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:IGP.Tools.DeviceEmulatorManager.Views"
                    xmlns:viewModels="clr-namespace:IGP.Tools.DeviceEmulatorManager.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:RibbonViewModel}">
        <DataTemplate.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Height" Value="80"></Setter>
                <Setter Property="MinWidth" Value="80"></Setter>
            </Style>
        </DataTemplate.Resources>
        <StackPanel Orientation="Horizontal">
            <Button Content="Start emulator" Command="{Binding StartEmulatorCommand}" />
            <Button Content="Stop emulator" Command="{Binding StopEmulatorCommand}" />
            <Button Content="Add device" Command="{Binding AddDeviceCommand}" />
            <Button Content="Remove device" Command="{Binding RemoveDeviceCommand}" />
            <Button Content="Save config" Command="{Binding SaveConfigCommand}" />
            <Button Content="Load config" Command="{Binding LoadConfigCommand}" />
        </StackPanel>
    </DataTemplate>
    
    <Style TargetType="{x:Type views:RibbonView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ContentControl Content="{Binding}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>