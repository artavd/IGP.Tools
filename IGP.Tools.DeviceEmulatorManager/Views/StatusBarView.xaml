<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:IGP.Tools.DeviceEmulatorManager.Views"
                    xmlns:implementation="clr-namespace:IGP.Tools.DeviceEmulatorManager.ViewModels.Implementation">

    <DataTemplate DataType="{x:Type implementation:StatusBarViewModel}">
        <views:StatusBarView DataContext="{Binding}" />
    </DataTemplate>
    
    <Style TargetType="{x:Type views:StatusBarView}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <TextBlock>Status Bar</TextBlock>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
